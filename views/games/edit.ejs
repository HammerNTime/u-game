<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/games/edit.css">
<%- include('../partials/nav') %>

<main>
  <h1 class="edit-game-text"><%= title %> </h1>
  <div class="games-container">
    <div class="game-btn-container">
      <div class="game-image-container">
        <a href="/games/<%= game._id %>">
        <img class="game-image" src="<%= game.imageUrl %>" alt="<%= game.title %> ">
        </a>    
      </div>
      <% if (user._id.equals("60f4f3a119d098da866a3e4f")) { %> 
      <div>
        <form action="/games/<%= game._id %>?_method=DELETE" method="POST" autocomplete="off">
          <button type="submit" class="delete-game-btn">Delete Game</button>
        </form>
      </div>    
      <% } %> 
    </div>
    <div>
      <form class="add-game-form" id="add-game-form" action="/games/<%= game._id %>?_method=PUT" method="POST" autocomplete="off">
        <div class="title-container">
          <label for="title-input" class="title-label">Title:</label>
          <input type="text" name="title" id="title-input" class="title-input" value="<%= game.title %>" required>
        </div>
        <div class="description-container">
          <label for="description-input" class="description-label">Description:</label>
          <textarea type="text" name="description" id="description-input" class="description-input" required><%= game.description %></textarea>
        </div>
        <div class="genre-container">
          <label for="genre-input" class="genre-label">Genre:</label>
          <select name="genre" id="genre-input" class="genre-select">
            <option value="Action" <%= game.genre == "Action" ? "selected" : "" %>>Action</option>
            <option value="Adventure" <%= game.genre == "Adventure" ? "selected" : "" %>>Adventure</option>
            <option value="RPG" <%= game.genre == "RPG" ? "selected" : "" %>>RPG</option>
            <option value="Shooter" <%= game.genre == "Shooter" ? "selected" : "" %>>Shooter</option>
            <option value="Simulation" <%= game.genre == "Simulation" ? "selected" : "" %>>Simulation</option>
            <option value="Sports" <%= game.genre == "Sports" ? "selected" : "" %>>Sports</option>
          </select>
        </div>
        <div class="image-url-container">
          <label for="image-url-input"  class="image-url-label">Image:</label>
          <input type="text" name="imageUrl" id="image-url-input" class="image-url-input" value="<%= game.imageUrl %>" required>
        </div>
        <button type="submit" class="form-submit-btn">Submit</button>
      </form>
    </div>
  </div>

</main>

<%- include('../partials/footer') %>