<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <% if (profile.avatar) { %>
    <div>
      <img 
        class="profile-avatar"
        src="<%= profile.avatar %>"
        alt="<%= profile.name %> avatar"
      >
    </div>
  <% } else { %>
    <div>
      <img class="profile-avatar" src="https://www.creativeboom.com/uploads/articles/74/746ceb5d478678ae3627e314dac5c436e03c03a2_810.jpg" alt="Placeholder Avatar Img">
    </div>
  <% } %> 
  <h1><%= title %> </h1>

  <form action="/profiles/<%= profile._id %>?_method=PUT" method="POST">
    <label for="name-input">Name:</label>
    <input type="text" name="name" value="<%= profile.name %>" id="name-input">
    <label for="bio-input">Bio:</label>
    <input type="text" name="bio" value="<%= profile.bio %>" id="bio-input">
    <label for="twitch-url-input">Twitch Link:</label>
    <input type="text" name="twitchUrl" value="<%= profile.twitchUrl %>" id="twitch-url-input">
    <label for="avatar-url-input">Avatar Link:</label>
    <input type="text" name="avatar" value="<%= profile.avatar %>" id="avatar-url-input">
    <button type="submit">Update</button>
  </form>
  <a href="/profiles/<%= profile._id %>/add-console">
    <button>Add a Console</button>
  </a>
</main>


  <%- include('../partials/footer') %>