  <% if (!user) { %>
    <link rel="stylesheet" href="/stylesheets/siwg.css">
  <% } %>
  <link rel="stylesheet" href="/stylesheets/nav.css">
</head>
<body>
  <div class="nav-container">
    <nav>
      <div class="title-div">
        <a href="/">
          <img src="/images/controllerImg/game-controller.png" alt="U" id="controller">
          <p class="site-title">Game</p>
        </a>
        <div class="page-title">
          <p>
            <%= title %>
          </p>
        </div>
      </div>
        <div class="right-nav-container">
          <div class="drop-menu">
            <a href="/games">
              <button class="drop-btn">Games</button>
            </a>
            <div class="drop-content">
              <a href="/games" class="drop-btn-1">All Games</a>
              <a href="/games/new" class="drop-btn-2">Add Game</a>
              <a href="/reviews">Recent Reviews</a>
            </div>
          </div>
          <% if (user) { %> 
            <div class="drop-menu">
              <a href="/profiles">
                <button class="drop-btn">Profiles</button>
              </a>
              <div class="drop-content">
                <a href="/profiles" class="drop-btn-1">All Profiles</a>
                <a href="/profiles/<%= user?.profile._id %>" class="drop-btn-2">Your Profile</a>
              </div>
            </div>
          <% } %> 
  
          <div class="nav-btns">
            <% if (user) { %>
              <a href="/auth/logout">
                <button type="submit" class="logout-btn">Logout</button>
              </a>
            <% } else { %>
              <a href="/auth/google" class="siwg-link">
                <button type="submit" class="siwg">
                  <img id="siwg-image" alt="Sign in with Google" />
                </button>
              </a>
            <% } %>
          </div>
        </div>
    </nav>
  </div>
